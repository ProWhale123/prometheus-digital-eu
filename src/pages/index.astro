---
// src/pages/index.astro (ENGLISH VERSION)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
// import Philosophy from '../components/Philosophy.astro'; // Ha van angol verziód, vedd ki a kommentet
import Services from '../components/Services.astro';
import FeaturedWork from '../components/FeaturedWork.astro'
import Process from '../components/Process.astro'; // Ha van angol verziód, vedd ki a kommentet
// import Testimonials from '../components/Testimonials.astro'; // Ha van angol verziód
import Pricing from '../components/Pricing.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro'; // Ezt majd megcsináljuk angolul is
---

<Layout 
    title="Prometheus Digital | Web Development & Digital Strategy" 
    description="The Prometheus Digital team creates modern, fast, and SEO-optimized websites for European businesses. Let's switch to the digital future, together!"
>
    <Header />

    <main>
        <Hero />
        
        <div class="animate-on-scroll">
            <Services />
        </div>

        <div class="bg-gray-900/40">
            <div class="animate-on-scroll">
            <Pricing />
            </div>
        </div>

            <div class="animate-on-scroll">
                <FeaturedWork />
            </div>
        <div class="animate-on-scroll">
            <Contact />
        </div>
    </main>

    <Footer />
    {/* A Cookie Banner-t majd később angolosítjuk vagy kikommentezheted egyelőre */}
    <CookieBanner />
</Layout>