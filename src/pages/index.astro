---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Philosophy from '../components/Philosophy.astro';
import Services from '../components/Services.astro';
import FeaturedWork from '../components/FeaturedWork.astro'
import Process from '../components/Process.astro';
import Testimonials from '../components/Testimonials.astro';
import Pricing from '../components/Pricing.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
---

<Layout 
    title="Prometheus Digital | Webfejlesztés & Digitális Stratégia" 
    description="A Prometheus Digital csapata modern, gyors és SEO-optimalizált weboldalakat készít magyarországi vállalkozások számára. Váltsunk a digitális jövőre, együtt!"
>
    <Header />

    <main>
        <Hero />
        
        <div class="animate-on-scroll">
            <Services />
        </div>

        <div class="bg-gray-900/40">
            <div class="animate-on-scroll">
            <Pricing />
            </div>
        </div>

            <div class="animate-on-scroll">
                <FeaturedWork />
            </div>

      {/* Jkivettem a testimonials szekciót majd rakjuk vissza */}

        {/* JAVÍTVA: Sötétebb háttér hozzáadva a vizuális tagoláshoz */}
        <div class="animate-on-scroll">
            <Contact />
        </div>
    </main>

    <Footer />
    <CookieBanner />
</Layout>

