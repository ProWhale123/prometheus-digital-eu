---
// src/pages/works.astro (ENGLISH VERSION)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import portfolioImage from '../../public/images/portfolio-background.jpg'; // Ellenőrizd az útvonalat!
import TextScramble from '../components/react/TextScramble.jsx';

// 3D Tilt Effect
import TiltCard from '../components/react/TiltCard.jsx';

// Project Images
import project1Image from '../../public/images/project-1.jpg';
import project2Image from '../../public/images/project-2.jpg';
import project3Image from '../../public/images/project-3.jpg';
import project4Image from '../../public/images/project-4.jpg';
import project5Image from '../../public/images/project-5.jpg';
import project6Image from '../../public/images/project-6.jpg';

const projects = [
     {
        title: "Clean Travel Agency Website",
        description: "A clean and modern website for DOL Bt. travel agency, specializing in student travel programs. The goal was to create an informative, easy-to-navigate interface that showcases destinations and simplifies the quote request process for schools.",
        tags: ["Astro", "Travel", "Quote Request", "Education"],
        imageSrc: project1Image, 
        liveUrl: "https://dolbt.eu/"
    },     
    {
        title: "Elegant Fine Dining Website",
        description: "A clean and exclusive online presence for 'Gastronomo' fine dining restaurant. The design reflects the premium atmosphere, focusing on visual storytelling and a frictionless table reservation process.",
        tags: ["Astro", "UI/UX Design", "Minimalist", "Typography"],
        imageSrc: project2Image,
        liveUrl: "https://gastronomo.eu/"
    },
    {
        title: "Modern Restaurant Website",
        description: "A modern and atmospheric website for Duna Rapszódia restaurant. The project centers around the visual experience, showcasing the menu, and an immersive gallery presenting the dishes and the venue's vibe.",
        tags: ["Astro", "UI/UX Design", "Gallery", "Responsive"],
        imageSrc: project3Image,
        liveUrl: "https://duna-rapszodia.hu/"
    },
    {
        title: "Construction & Renovation Website",
        description: "A clean website radiating trust for a construction business. The design prioritizes quality work and expertise, aiming to showcase the portfolio professionally and encourage quote requests.",
        tags: ["Astro", "Portfolio", "Lead Generation"],
        imageSrc: project4Image,
        liveUrl: "https://renovation-company.netlify.app/"
    },
    {
        title: "Professional Law Firm Website",
        description: "A digital business card radiating reliability for a Budapest law firm. The focus was on the professional presentation of practice areas and establishing a simple, confidential channel for client contact.",
        tags: ["UI/UX Design", "Responsive", "Astro", "Strategy"],
        imageSrc: project5Image,
        liveUrl: "https://kovacslegal.hu/"
    },
    {
        title: "Atmospheric Bistro Landing Page",
        description: "A one-page introduction site built on visual storytelling for a traditional restaurant. The goal was to convey the unique atmosphere and present the menu in an appetizing, modern way.",
        tags: ["Design", "Animations", "UI/UX", "Astro"],
        imageSrc: project6Image,
        liveUrl: "https://bistrobudapest.hu/"
    },
];
---

<Layout 
    title="Our Works - Prometheus Digital" 
    description="Check out the websites, webshops, and custom digital solutions created by Prometheus Digital."
>
    <Header />

    <main>
        <section 
            class="relative flex items-center justify-center text-center min-h-[50vh] overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <Image 
                    src={portfolioImage}
                    alt="Prometheus Digital - Portfolio Background"
                    widths={[400, 800, 1200, 1920]}
                    sizes="(max-width: 800px) 100vw, 1920px"
                    quality="mid"
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 relative z-10">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    What We Are <br class="md:hidden" />
                    <TextScramble 
                        client:load 
                        text="Proud Of" 
                        className="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
                    />
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300">
                    Every project is a new challenge and a new opportunity to create something lasting. Check out our recent works and get inspired for your own!
                </p>
            </div>
        </section>

        <section class="py-12 md:py-32">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
                    {projects.map(project => (
                        <div class="animate-on-scroll h-full">
                            
                            <TiltCard client:visible className="h-full">
                                <a href={project.liveUrl} target="_blank" rel="noopener noreferrer" class="group block bg-gray-900/50 border-2 border-white/10 rounded-2xl overflow-hidden h-full transform transition-all duration-300 hover:border-sky-500/50 hover:shadow-2xl hover:shadow-sky-500/10" style="will-change: transform;">
                                    <div class="overflow-hidden">
                                        <Image 
                                            src={project.imageSrc} 
                                            alt={project.title} 
                                            widths={[400, 600]}
                                            sizes="(max-width: 768px) 100vw, 50vw"
                                            quality="mid"
                                            class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105" 
                                        />
                                    </div>
                                    <div class="p-8">
                                        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-sky-400 transition-colors">{project.title}</h3>
                                        <p class="text-gray-300 mb-6">{project.description}</p>
                                        <div class="flex flex-wrap gap-2">
                                            {project.tags.map(tag => (
                                                <span class="bg-sky-500/10 text-sky-300 text-sm font-semibold px-3 py-1 rounded-full">{tag}</span>
                                            ))}
                                        </div>
                                    </div>
                                </a>
                            </TiltCard>

                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 animate-on-scroll">
             <div class="container mx-auto px-6 text-center">
                 <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
                    Like what you see?
                </h2>
                <p class="max-w-2xl mx-auto text-lg text-gray-300 mb-8">
                    Let's make your idea a reality too! Get in touch and let's discuss how we can help you achieve your digital goals.
                </p>
                <a href="/contact" 
                   class="inline-block bg-sky-500 text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 ease-in-out 
                          transform hover:scale-105 hover:bg-sky-600 hover:shadow-2xl hover:shadow-sky-500/30
                          focus:outline-none focus:ring-4 focus:ring-sky-500 focus:ring-opacity-50">
                    Let's Start!
                </a>
             </div>
        </section>
    </main>

    <Footer />
</Layout>