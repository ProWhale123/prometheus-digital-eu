---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import { Image } from 'astro:assets';

const budapestProjects = [
    { name: "Elegáns Fine Dining Weboldal", description: "Bár nem webshop, ez az oldal bemutatja a prémium dizájn és az Astro sebességének erejét, ami egy webáruháznál is kritikus.", imageSrc: project1Image, result: "Prémium felhasználói élmény" },
    { name: "Modern Éttermi Weboldal Galériával", description: "Az elegáns, letisztult dizájn és a konverziós fókusz (asztalfoglalás) jó példa a webshopoknál is alkalmazott elveinkre.", imageSrc: project2Image, result: "Exkluzív online jelenlét" },
    { name: "Modern Építőipari és Felújítási Weboldal", description: "Ez a projekt a bizalomépítésről és a hatékony lead generálásról szól, ami minden sikeres e-kereskedelmi oldal alapja.", imageSrc: project3Image, result: "+60% Ajánlatkérés" },
];

import project1Image from '../../public/images/project-1.jpg';
import project2Image from '../../public/images/project-2.jpg';
import project3Image from '../../public/images/project-3.jpg';

import ConversionIcon from '../components/icons/ConversionIcon.astro';
import SpeedIcon from '../components/icons/SpeedIcon.astro';
import PaymentIcon from '../components/icons/PaymentIcon.astro';
import PartnerIcon from '../components/icons/PartnerIcon.astro';

const whyUsFeatures = [
    { icon: ConversionIcon, title: "Konverzió-Fókuszú Tervezés", description: "Egy webshop egyetlen célja, hogy eladjon. Minden dizájn-döntést és funkciót ennek rendelünk alá, a termékoldalaktól a pénztár folyamatáig." },
    { icon: SpeedIcon, title: "Villámgyors Termékoldalak", description: "Minden másodpercnyi késlekedés elveszett vásárlót jelent. Astro alapú webshopjaink garantálják a piacvezető betöltési sebességet, csökkentve a kosárelhagyást." },
    { icon: PaymentIcon, title: "Biztonságos Fizetési Rendszerek", description: "Stripe és más modern fizetési kapuk zökkenőmentes integrációjával biztosítjuk a vásárlók bizalmát és a tranzakciók biztonságát." },
    { icon: PartnerIcon, title: "Személyes, Helyi Támogatás", description: "Elérhető, budapesti partnerek vagyunk. Segítünk a webshop betanításában, és a felmerülő kérdésekben gyorsan rendelkezésre állunk." },
];
---

<Layout 
    title="Webshop Készítés Budapest | Konverzió-Optimalizált E-kereskedelem - Prometheus Digital" 
    description="Indítson profitot termelő webshopot Budapesten! Astro alapú, egyedi e-kereskedelmi megoldások, biztonságos fizetési integrációval KKV-knak."
>
    <Header />

    <main>
        <section class="relative pt-40 pb-20 flex items-center justify-center text-center overflow-hidden">
            <div class="absolute inset-0 bg-gray-950"></div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 text-center relative z-10">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Webshop Készítés Budapesten, <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Ami Elad, Nem Csak Listáz</span>
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300 mb-8">
                    A látogatókból vásárlókat formálunk. Kifejezetten budapesti márkákra és kereskedőkre szabott, felhasználóbarát webáruházakat építünk.
                </p>
                <a href="/kapcsolat?tema=webshop-konzultacio" class="inline-block bg-sky-500 text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 hover:bg-sky-600 hover:shadow-2xl">
                    Kérek egy ingyenes E-kereskedelmi Konzultációt!
                </a>
            </div>
        </section>
        
        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Több Mint Egy Webshop: Egy Növekedési Partner</h2>
                    <p class="text-lg text-gray-400">Egy webáruház elindítása komplex feladat. Mi nem csak a technikai hátteret biztosítjuk, hanem stratégiai partnerként segítünk a sikerben.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
                    {whyUsFeatures.map(feature => {
                        const Icon = feature.icon;
                        return(
                            <div class="flex items-start space-x-6">
                                <div class="flex-shrink-0 flex items-center justify-center h-16 w-16 rounded-full bg-sky-500/10 text-sky-400">
                                   <Icon />
                                </div>
                                <div>
                                    <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
                                    <p class="text-gray-400">{feature.description}</p>
                                </div>
                            </div>
                        )
                    })}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32 bg-gray-900/40">
            <div class="container mx-auto px-6">
                 <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Budapesti Referenciáink</h2>
                    <p class="text-lg text-gray-400">Bár minden projekt más, az alapelveink (minőségi dizájn, sebesség, üzleti fókusz) minden munkánkban visszaköszönnek.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {budapestProjects.map(project => (
                        <div class="border border-white/10 rounded-2xl overflow-hidden group transform transition-all duration-300 hover:shadow-2xl hover:shadow-sky-500/20 hover:-translate-y-2">
                            <Image src={project.imageSrc} alt={project.name} class="w-full h-48 object-cover" />
                            <div class="p-6 bg-gray-900/50">
                                <h3 class="text-xl font-bold text-white">{project.name}</h3>
                                <p class="text-gray-400 mt-2 text-sm">{project.description}</p>
                                <div class="mt-4 text-sky-400 font-bold text-lg">{project.result}</div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Egy Partner, Aki Valóban Elérhető</h2>
                        <p class="text-lg text-gray-400 mb-6">
                            Hiszünk a személyes kapcsolat erejében. Mivel mi is Budapesten vagyunk, könnyen elérhetőek vagyunk egy személyes konzultációra, ahol egy kávé mellett beszélhetjük át a projektjét.
                        </p>
                         <a href="/kapcsolat" class="font-semibold text-sky-400 hover:text-sky-300 transition-colors">Beszéljünk személyesen! →</a>
                    </div>
                    <div class="h-96 w-full border border-white/10 rounded-2xl overflow-hidden shadow-xl">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2695.53328243685!2d19.01168921562668!3d47.50202977917789!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4741de753b8113c3%3A0x60f470a21f7c3583!2sBudapest%2C%20Hable%C3%A1ny%20u.%206a%2C%201125!5e0!3m2!1shu!2shu!4v1695924844883!5m2!1shu!2shu"
                            title="Prometheus Digital iroda a Google Térképen"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </section>

        <Contact />
    </main>
    <Footer />
</Layout>