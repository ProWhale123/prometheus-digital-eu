---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MagneticButton from '../components/react/MagneticButton.jsx';
import SpotlightHeroBackground from '../components/react/SpotlightHeroBackground.jsx';
---

<Layout title="404 - Nem Található" description="Ez az oldal elveszett az űrben.">
    <Header />
    <main class="h-screen flex items-center justify-center text-center bg-gray-950 overflow-hidden relative">
        
        <SpotlightHeroBackground client:visible />
        
        <div class="absolute inset-0 bg-gray-950/30 pointer-events-none"></div>

        <div class="relative z-10 px-6">
            <h1 class="text-[10rem] md:text-[12rem] font-black text-transparent bg-clip-text bg-gradient-to-b from-gray-800 to-gray-950 select-none animate-pulse">
                404
            </h1>
            
            <div class="-mt-12 relative">
                <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Hoppá! Kialudt a láng.</h2>
                <p class="text-gray-400 text-lg mb-10 max-w-md mx-auto">
                    Úgy tűnik, ez az oldal nem létezik, vagy áthelyeztük egy másik dimenzióba.
                </p>
                
                <MagneticButton 
                    client:load 
                    href="/" 
                    className="bg-sky-500 text-white font-bold py-3 px-8 rounded-full hover:bg-sky-600 shadow-lg hover:shadow-sky-500/30"
                >
                    Vissza a Főoldalra
                </MagneticButton>
            </div>
        </div>
    </main>
    <Footer />
</Layout>