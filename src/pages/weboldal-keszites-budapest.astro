---
// src/pages/weboldal-keszites-budapest.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import { Image } from 'astro:assets';

import project1Image from '../../public/images/project-1.jpg';
import project2Image from '../../public/images/project-2.jpg';
import project3Image from '../../public/images/project-3.jpg';
import project4Image from '../../public/images/project-4.jpg';
import project5Image from '../../public/images/project-5.jpg';

const budapestProjects = [
     {
        title: "Elegáns Fine Dining Weboldal",
        description: "Egy letisztult és exkluzív online jelenlét a 'Gastronomo' fine dining étterem számára. A dizájn a prémium hangulatot tükrözi, a fókusz pedig a vizuális történetmesélésen és az egyszerű asztalfoglalási folyamaton van.",
        tags: ["Astro", "UI/UX Dizájn", "Minimalista", "Tipográfia"],
        imageSrc: project1Image, // JAVÍTVA
        liveUrl: "https://gastronomo.eu/"
    },
    {
        title: "Modern Éttermi Weboldal Galériával",
        description: "Egy modern és hangulatos weboldal a Duna Rapszódia étterem számára. A projekt középpontjában a vizuális élmény, az étlap bemutatása és a könnyen kezelhető galéria áll, amely bemutatja az ételek és a hely atmoszféráját.",
        tags: ["Astro", "UI/UX Dizájn", "Galéria", "Reszponzív"],
        imageSrc: project2Image, // JAVÍTVA
        liveUrl: "https://duna-rapszodia.hu/"
    },
    {
        title: "Modern Építőipari és Felújítási Weboldal",
        description: "Egy letisztult és bizalmat sugárzó weboldal egy építőipari vállalkozás számára. A dizájn a minőségi munkát és a szakértelmet helyezi előtérbe, a cél pedig a portfólió bemutatása és az árajánlatkérések ösztönzése.",
        tags: ["Astro", "Portfoólió", "Lead Generation"],
        imageSrc: project3Image, // JAVÍTVA
        liveUrl: "https://renovation-company.netlify.app/"
    },
    {
        title: "Professzionális Ügyvédi Iroda Weboldal",
        description: "Egy letisztult és megbízhatóságot sugárzó digitális névjegy egy budapesti ügyvédi iroda számára. A fókuszban a szakterületek szakszerű bemutatása és a kliensekkel való egyszerű, bizalmi kapcsolatfelvétel állt.",
        tags: ["UI/UX Dizájn", "Reszpoinzív", "Astro", "Stratégia"],
        imageSrc: project4Image, // JAVÍTVA
        liveUrl: "https://kovacslegal.hu/"
    },
    {
        title: "Hangulatos Éttermi Landing Page",
        description: "Egy egyoldalas, vizuális történetmesélésre épülő bemutatkozó oldal egy tradicionális étterem számára. A cél a különleges atmoszféra átadása és az étlap étvágygerjesztő, modern tálalása volt.",
        tags: ["Dizájn", "Animációk", "UI/UX", "Astro"],
        imageSrc: project5Image, // JAVÍTVA
        liveUrl: "https://bistrobudapest.hu/"
    },
];

// Ikonok importálása a "Miért mi?" szekcióhoz
import LocalIcon from '../components/icons/LocalIcon.astro'; // Létrehozandó ikon
import AstroIcon from '../components/icons/AstroIcon.astro'; // Létrehozandó ikon
import ResultsIcon from '../components/icons/ResultsIcon.astro'; // Létrehozandó ikon
import PartnerIcon from '../components/icons/PartnerIcon.astro'; // Létrehozandó ikon

const whyUsFeatures = [
    { icon: LocalIcon, title: "Helyi Piaci Ismeret", description: "Nem csak a kódot, a budapesti piac dinamikáját is ismerjük. Tudjuk, mivel szólíthatja meg a helyi vevőket, hogy kitűnjön a versenytársak közül." },
    { icon: AstroIcon, title: "Astro Specializáció", description: "A leggyorsabb technológiával dolgozunk. Garantáljuk, hogy weboldala nem csak modern lesz, de a Google és a látogatók is imádni fogják a sebességét." },
    { icon: ResultsIcon, title: "Mérhető Eredmények", description: "A siker számunkra nem a dizájnban, hanem a számokban mérhető. Adatvezérelt megoldásokkal segítjük elérni az Ön valós üzleti céljait." },
    { icon: PartnerIcon, title: "Személyes Partnerség", description: "Elérhető, budapesti partnerek vagyunk. Együtt gondolkodunk Önnel, és egy kávé mellett is átbeszélhetjük a projekt részleteit." }
];
---

<Layout 
    title="Weboldal Készítés Budapest | Professzionális Astro Fejlesztés - Prometheus Digital" 
    description="Növelje budapesti vállalkozása forgalmát egy villámgyors, SEO-optimalizált weboldallal. Stratégiai tervezés és méréhető eredmények KKV-knak."
>
    <Header />

    <main>
        <section class="relative pt-40 pb-20 flex items-center justify-center text-center overflow-hidden">
            <div class="absolute inset-0 bg-gray-950"></div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 text-center relative z-10">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Weboldal Készítés Budapesten, <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Ami Eredményt Hoz</span>
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300 mb-8">
                    Ahol a versenytársak csak zajt keltenek, mi ügyfeleket szerzünk Önnek. Kifejezetten budapesti vállalkozásokra specializálódott, adatvezérelt webfejlesztés.
                </p>
                <a href="/kapcsolat?tema=budapest-piacelemzes" class="inline-block bg-sky-500 text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 hover:bg-sky-600 hover:shadow-2xl">
                    Kérek egy ingyenes piaci elemzést!
                </a>
            </div>
        </section>
        
        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">A Helyi Partner a Digitális Növekedésben</h2>
                    <p class="text-lg text-gray-400">Többet nyújtunk egy arctalan, távoli ügynökségnél. Ismerjük a budapesti piacot, és személyes partnerséget kínálunk a siker érdekében.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
                    {whyUsFeatures.map(feature => {
                        const Icon = feature.icon;
                        return(
                            <div class="flex items-start space-x-6">
                                <div class="flex-shrink-0 flex items-center justify-center h-16 w-16 rounded-full bg-sky-500/10 text-sky-400">
                                   <Icon />
                                </div>
                                <div>
                                    <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
                                    <p class="text-gray-400">{feature.description}</p>
                                </div>
                            </div>
                        )
                    })}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32 bg-gray-900/40">
            <div class="container mx-auto px-6">
                 <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Sikertörténetek Budapesten</h2>
                    <p class="text-lg text-gray-400">Néhány példa arra, hogyan segítettünk helyi vállalkozásoknak a növekedésben.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {budapestProjects.map(project => (
                        <div class="border border-white/10 rounded-2xl overflow-hidden group transform transition-all duration-300 hover:shadow-2xl hover:shadow-sky-500/20 hover:-translate-y-2">
<Image src={project.imageSrc} alt={project.title} class="w-full h-48 object-cover" />                            <div class="p-6 bg-gray-900/50">
                                <h3 class="text-xl font-bold text-white">{project.name}</h3>
                                <p class="text-gray-400 mt-2 text-sm">{project.description}</p>
                                <div class="mt-4 text-sky-400 font-bold text-lg">{project.result}</div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                    <div>
                        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Egy Partner, Aki Valóban Elérhető</h2>
                        <p class="text-lg text-gray-400 mb-6">
                            Hiszünk a személyes kapcsolat erejében. Mivel mi is Budapesten vagyunk, könnyen elérhetőek vagyunk egy személyes konzultációra, ahol egy kávé mellett beszélhetjük át a projektjét. Nincsenek időzónák, nincsenek távoli, arctalan projektmenedzserek.
                        </p>
                         <a href="/kapcsolat" class="font-semibold text-sky-400 hover:text-sky-300 transition-colors">Beszéljünk személyesen! &rarr;</a>
                    </div>
                    <div class="h-96 w-full border border-white/10 rounded-2xl overflow-hidden shadow-xl">
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2695.53328243685!2d19.01168921562668!3d47.50202977917789!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4741de753b8113c3%3A0x60f470a21f7c3583!2sBudapest%2C%20Hable%C3%A1ny%20u.%206a%2C%201125!5e0!3m2!1shu!2shu!4v1695924844883!5m2!1shu!2shu"
                            title="Prometheus Digital iroda a Google Térképen"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </section>

        <Contact />
    </main>
    <Footer />
</Layout>