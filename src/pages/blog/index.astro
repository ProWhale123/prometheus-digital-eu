---
// src/pages/blog/index.astro
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Contact from "../../components/Contact.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import CookieBanner from "../../components/CookieBanner.astro";

// Interactive elements
import TiltCard from "../../components/react/TiltCard.jsx";
import FloatingElement from "../../components/FloatingElement.astro";
import SpotlightHeroBackground from "../../components/react/SpotlightHeroBackground.jsx";

// Background
import blogImage from "../../../public/images/blog-background.jpg";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout
    title="Blog - Prometheus Digital"
    description="Thoughts, tips, and news about the digital world. Read our latest posts on web development, Astro, and SEO."
>
    <Header />

    <main class="overflow-hidden">
        <section
            class="relative h-[50vh] min-h-[400px] flex items-center justify-center text-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <div
                    class="parallax-bg w-full h-[120%] -translate-y-[10%] will-change-transform"
                >
                    <Image
                        src={blogImage}
                        alt="Prometheus Digital Blog"
                        class="w-full h-full object-cover opacity-60"
                        quality="high"
                    />
                </div>
            </div>
            <div
                class="absolute inset-0 bg-[#0B1120]/70 backdrop-blur-[2px] z-10"
            >
            </div>

            <div class="container mx-auto px-6 relative z-10 pt-10">
                <h1
                    class="font-black text-white uppercase tracking-tighter mb-4"
                >
                    <div class="overflow-hidden py-2">
                        <span
                            class="reveal-text block text-4xl md:text-6xl text-gray-300 translate-y-20 opacity-0"
                        >
                            THOUGHTS &
                        </span>
                    </div>
                    <div class="overflow-hidden py-4">
                        <span
                            class="reveal-text block text-5xl md:text-7xl text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300 translate-y-20 opacity-0"
                        >
                            NOVELTIES
                        </span>
                    </div>
                </h1>
                <p
                    class="reveal-desc max-w-2xl mx-auto text-lg md:text-xl text-gray-300 font-light translate-y-10 opacity-0"
                >
                    Your digital compass. Technical tips, strategy, and
                    everything that moves your business forward.
                </p>
            </div>
        </section>

        <section class="py-24 md:py-32 bg-[#0B1120] relative">
            <FloatingElement speed={-0.2} class="top-20 right-0 z-0 opacity-10">
                <div class="w-96 h-96 rounded-full bg-cyan-500 blur-[120px]">
                </div>
            </FloatingElement>

            <div class="container mx-auto px-6 relative z-10">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-10 max-w-6xl mx-auto"
                >
                    {
                        sortedPosts.map((post, index) => (
                            <div class="blog-card opacity-0 translate-y-12">
                                <TiltCard
                                    client:visible
                                    className="h-full bg-transparent"
                                >
                                    <a
                                        href={`/blog/${post.slug}/`}
                                        class="block group h-full bg-gray-900 border border-white/10 rounded-3xl overflow-hidden hover:border-sky-500/50 transition-all duration-500 shadow-xl"
                                    >
                                        <div class="h-60 overflow-hidden relative">
                                            <div class="absolute inset-0 bg-sky-900/0 group-hover:bg-sky-900/20 transition-colors duration-500 z-10" />
                                            <Image
                                                src={post.data.heroImage}
                                                alt={post.data.title}
                                                width={800}
                                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                            />

                                            <div class="absolute top-4 left-4 z-20 bg-gray-900/80 backdrop-blur-md px-3 py-1 rounded-full border border-white/10">
                                                <span class="text-xs font-bold text-sky-400 uppercase tracking-wider">
                                                    {post.data.pubDate.toLocaleDateString(
                                                        "en-US",
                                                        {
                                                            year: "numeric",
                                                            month: "short",
                                                            day: "numeric",
                                                        },
                                                    )}
                                                </span>
                                            </div>
                                        </div>

                                        <div class="p-8 flex flex-col h-[calc(100%-15rem)]">
                                            <div class="mb-4">
                                                <span class="text-xs font-bold text-gray-500 uppercase tracking-widest border border-white/10 px-2 py-1 rounded">
                                                    {post.data.tags[0]}
                                                </span>
                                            </div>

                                            <h2 class="text-2xl font-bold text-white mb-4 leading-tight group-hover:text-sky-300 transition-colors">
                                                {post.data.title}
                                            </h2>

                                            <p class="text-gray-400 mb-6 flex-grow line-clamp-3 leading-relaxed">
                                                {post.data.description}
                                            </p>

                                            <div class="flex items-center text-sky-400 font-bold text-sm uppercase tracking-wider group/link mt-auto">
                                                <span class="mr-2 group-hover/link:mr-4 transition-all">
                                                    Read More
                                                </span>
                                                <svg
                                                    class="w-4 h-4"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M17 8l4 4m0 0l-4 4m4-4H3"
                                                    />
                                                </svg>
                                            </div>
                                        </div>
                                    </a>
                                </TiltCard>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <Contact />
    </main>

    <Footer />
    <CookieBanner />
</Layout>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);

    function animateBlogList() {
        // 1. Hero Reveal
        const tl = gsap.timeline({ delay: 0.2 });
        tl.to(".reveal-text", {
            y: 0,
            opacity: 1,
            duration: 1.2,
            stagger: 0.15,
            ease: "power4.out",
        }).to(
            ".reveal-desc",
            {
                y: 0,
                opacity: 1,
                duration: 1,
                ease: "power3.out",
            },
            "-=0.8",
        );

        // 2. Parallax BG
        gsap.to(".parallax-bg", {
            yPercent: 20,
            ease: "none",
            scrollTrigger: {
                trigger: "header",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
        });

        // 3. Grid Animation
        const cards = document.querySelectorAll(".blog-card");
        ScrollTrigger.batch(cards, {
            onEnter: (batch) =>
                gsap.to(batch, {
                    opacity: 1,
                    y: 0,
                    duration: 0.8,
                    stagger: 0.15,
                    ease: "power3.out",
                    overwrite: true,
                }),
            start: "top 90%",
        });
    }

    animateBlogList();
    document.addEventListener("astro:page-load", animateBlogList);
</script>
