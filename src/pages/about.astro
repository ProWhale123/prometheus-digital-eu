---
// src/pages/about.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Image } from "astro:assets";
import aboutImage from "../assets/images/about-background.jpg";
import CookieBanner from "../components/CookieBanner.astro";

// Icon imports
import FacebookIcon from "../components/icons/FacebookIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";

// Interactive elements
import FloatingElement from "../components/FloatingElement.astro";
import SpotlightCard from "../components/react/SpotlightCard.jsx";
import MagneticButton from "../components/react/MagneticButton.jsx";

const teamMembers = [
    {
        name: "Árpád Bretz",
        role: "Founder & Lead Developer",
        bio: "My passion is clean code and building efficient systems. I believe the foundation of a good website is a rock-solid technological background maximizing speed and reliability.",
        imageUrl: "/images/arpad-bretz.JPG",
        email: "arpadbretz@prometheusdigital.hu",
        socials: { linkedin: "#", facebook: "#" },
    },
    {
        name: "Félix Bary",
        role: "Founder & Creative Technologist",
        bio: "I am interested in the human side: how to create digital experiences that not only work but evoke real emotions and remain memorable.",
        imageUrl: "/images/felix-bary.JPG",
        email: "felixbary@prometheusdigital.hu",
        socials: { linkedin: "#", facebook: "#" },
    },
];

const principles = [
    {
        title: "Strategic Partnership",
        description:
            "We are not just contractors, but partners. We deeply understand your business goals.",
    },
    {
        title: "Measurable Results",
        description:
            "Design and technology are tools for us. The real goal is measurable growth.",
    },
    {
        title: "Radical Transparency",
        description:
            "No hidden costs. Clear and honest communication throughout the entire process.",
    },
    {
        title: "Future-Proof Technology",
        description:
            "We work exclusively with modern, timeless tools (Astro) to ensure your investment pays off.",
    },
];
---

<Layout
    title="About Us - Prometheus Digital"
    description="Get to know the story of Prometheus Digital, our philosophy, and the team behind the digital solutions."
>
    <Header />

    <main class="overflow-hidden">
        <section
            class="relative h-[70vh] flex items-center justify-center text-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <div
                    class="parallax-bg w-full h-[120%] -translate-y-[10%] will-change-transform"
                >
                    <Image
                        src={aboutImage}
                        alt="Prometheus Digital Team"
                        class="w-full h-full object-cover opacity-60"
                        quality="high"
                    />
                </div>
            </div>
            <div
                class="absolute inset-0 bg-[#0B1120]/70 backdrop-blur-[2px] z-10"
            >
            </div>

            <div class="container mx-auto px-6 relative z-20 pt-20">
                <h1
                    class="font-black text-white uppercase tracking-tighter mb-8"
                >
                    <div class="overflow-hidden py-4">
                        <span
                            class="reveal-text block text-4xl md:text-6xl text-gray-300 translate-y-20 opacity-0 mb-2 leading-tight"
                        >
                            TWO PASSIONS
                        </span>
                    </div>

                    <div class="overflow-hidden py-4">
                        <span
                            class="reveal-text block text-5xl md:text-8xl text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300 translate-y-20 opacity-0 pb-3 leading-tight"
                        >
                            ONE MISSION
                        </span>
                    </div>
                </h1>
                <p
                    class="reveal-desc max-w-3xl mx-auto text-xl text-gray-300 font-light translate-y-10 opacity-0 leading-relaxed"
                >
                    We are not just an agency. We are a partnership born from
                    the meeting of technology and creativity.
                </p>
            </div>
        </section>

        <section class="py-24 md:py-32 relative">
            <div
                class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-sky-500/5 rounded-full blur-[120px] pointer-events-none"
            >
            </div>

            <div class="container mx-auto px-6 relative z-10">
                <div class="max-w-4xl mx-auto text-center">
                    <h2
                        class="text-3xl md:text-5xl font-black text-white mb-10 uppercase tracking-tight"
                    >
                        The Fire That Belongs to Everyone
                    </h2>
                    <div
                        class="prose prose-xl prose-invert mx-auto text-gray-300 space-y-8 font-light leading-relaxed"
                    >
                        <p>
                            According to Greek mythology, Prometheus saw
                            humanity in the dark, without tools or knowledge. He
                            defied the gods and stole fire for them – the symbol
                            of progress and knowledge.
                        </p>
                        <p
                            class="text-white text-2xl font-medium border-l-4 border-sky-500 pl-6 my-10 italic"
                        >
                            "Our mission is to be the Prometheus of the modern
                            age. We bring the fire of high technology to every
                            business."
                        </p>
                        <p>
                            Today, professional digital presence is the "fire".
                            For a long time, this was only the privilege of the
                            biggest ones. We believe this fire belongs to
                            everyone with a vision. We are here to pass you the
                            torch.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-24 md:py-32 bg-[#050911] relative">
            <div
                class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] bg-[length:40px_40px] opacity-[0.03] pointer-events-none"
            >
            </div>

            <div class="container mx-auto px-6 relative z-10">
                <div class="text-center max-w-3xl mx-auto mb-20">
                    <h2
                        class="text-4xl md:text-5xl font-black text-white mb-4 uppercase tracking-tight"
                    >
                        The Faces Behind the Code
                    </h2>
                    <p class="text-lg text-gray-400">
                        Those who work every day to make your digital vision a
                        reality.
                    </p>
                </div>

                <div class="space-y-32">
                    {
                        teamMembers.map((member, index) => (
                            <div class="grid grid-cols-1 md:grid-cols-12 gap-12 items-center team-card">
                                <div
                                    class:list={[
                                        "md:col-span-5 relative group",
                                        { "md:order-last": index % 2 !== 0 },
                                    ]}
                                >
                                    <div class="absolute inset-0 bg-gradient-to-tr from-sky-500 to-cyan-400 rounded-3xl transform rotate-3 scale-95 group-hover:rotate-6 group-hover:scale-100 transition-all duration-500 opacity-20 group-hover:opacity-40" />
                                    <div class="relative rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
                                        <img
                                            src={member.imageUrl}
                                            alt={member.name}
                                            class="w-full h-auto object-cover transform transition-transform duration-700 group-hover:scale-105"
                                        />
                                    </div>
                                </div>

                                <div
                                    class:list={[
                                        "md:col-span-7",
                                        {
                                            "text-left": index % 2 === 0,
                                            "md:text-right": index % 2 !== 0,
                                        },
                                    ]}
                                >
                                    <h3 class="text-4xl md:text-5xl font-bold text-white mb-2">
                                        {member.name}
                                    </h3>
                                    <p class="text-sky-400 font-bold text-xl uppercase tracking-wider mb-6">
                                        {member.role}
                                    </p>
                                    <p class="text-gray-300 text-lg md:text-xl leading-relaxed mb-8 max-w-2xl ml-auto mr-auto md:mx-0">
                                        {member.bio}
                                    </p>

                                    <div
                                        class:list={[
                                            "flex items-center gap-4",
                                            {
                                                "justify-start":
                                                    index % 2 === 0,
                                                "md:justify-end":
                                                    index % 2 !== 0,
                                            },
                                        ]}
                                    >
                                        <a
                                            href={`mailto:${member.email}`}
                                            class="p-3 bg-white/5 rounded-full text-white hover:bg-sky-500 hover:text-white transition-all duration-300 hover:-translate-y-1"
                                            aria-label="Email"
                                        >
                                            <EmailIcon class="w-6 h-6" />
                                        </a>
                                        <a
                                            href={member.socials.linkedin}
                                            target="_blank"
                                            class="p-3 bg-white/5 rounded-full text-white hover:bg-[#0077b5] hover:text-white transition-all duration-300 hover:-translate-y-1"
                                            aria-label="LinkedIn"
                                        >
                                            <LinkedInIcon class="w-6 h-6" />
                                        </a>
                                        <a
                                            href={member.socials.facebook}
                                            target="_blank"
                                            class="p-3 bg-white/5 rounded-full text-white hover:bg-[#1877F2] hover:text-white transition-all duration-300 hover:-translate-y-1"
                                            aria-label="Facebook"
                                        >
                                            <FacebookIcon class="w-6 h-6" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <section class="py-24 md:py-32 relative">
            <FloatingElement speed={0.4} class="top-0 left-0 z-0 opacity-10">
                <div class="w-96 h-96 rounded-full bg-sky-600 blur-[120px]">
                </div>
            </FloatingElement>

            <div class="container mx-auto px-6 relative z-10">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2
                        class="text-4xl md:text-5xl font-black text-white mb-6 uppercase tracking-tight"
                    >
                        Our Compass for Cooperation
                    </h2>
                    <p class="text-lg text-gray-400">
                        If these values are important to you too, then you are
                        in the right place.
                    </p>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    {
                        principles.map((principle) => (
                            <SpotlightCard
                                client:visible
                                className="h-full bg-gray-900/40 backdrop-blur-sm"
                            >
                                <div class="p-8 h-full">
                                    <h3 class="text-xl font-bold text-white mb-4 border-b border-sky-500/30 pb-4 inline-block">
                                        {principle.title}
                                    </h3>
                                    <p class="text-gray-400 leading-relaxed text-sm">
                                        {principle.description}
                                    </p>
                                </div>
                            </SpotlightCard>
                        ))
                    }
                </div>
            </div>
        </section>

        <section class="py-24 md:py-32 text-center relative overflow-hidden">
            <div
                class="absolute inset-0 bg-gradient-to-t from-[#0B1120] via-gray-900/50 to-transparent -z-10"
            >
            </div>
            <div class="container mx-auto px-6">
                <h2 class="text-4xl md:text-5xl font-black text-white mb-6">
                    Let's Discuss Your Ideas!
                </h2>
                <p
                    class="max-w-2xl mx-auto text-xl text-gray-300 mb-10 font-light"
                >
                    If our values match yours, let's create something lasting
                    together.
                </p>
                <MagneticButton client:visible>
                    <a
                        href="/contact"
                        class="inline-block bg-white text-gray-900 font-bold py-4 px-12 rounded-full text-lg shadow-[0_0_20px_rgba(255,255,255,0.2)] hover:shadow-[0_0_40px_rgba(14,165,233,0.4)] hover:scale-105 transition-all duration-300"
                    >
                        Get in Touch
                    </a>
                </MagneticButton>
            </div>
        </section>
    </main>
    <Footer />
    <CookieBanner />
</Layout>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);

    function animateAbout() {
        // 1. Header Reveal
        const tl = gsap.timeline({ delay: 0.2 });
        tl.to(".reveal-text", {
            y: 0,
            opacity: 1,
            duration: 1.2,
            stagger: 0.15,
            ease: "power4.out",
        }).to(
            ".reveal-desc",
            {
                y: 0,
                opacity: 1,
                duration: 1,
                ease: "power3.out",
            },
            "-=0.8",
        );

        // 2. Parallax BG
        gsap.to(".parallax-bg", {
            yPercent: 20,
            ease: "none",
            scrollTrigger: {
                trigger: "header",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
        });

        // 3. Team Cards Fade-In
        const teamCards = document.querySelectorAll(".team-card");
        teamCards.forEach((card) => {
            gsap.fromTo(
                card,
                { y: 50, opacity: 0 },
                {
                    y: 0,
                    opacity: 1,
                    duration: 1,
                    ease: "power3.out",
                    scrollTrigger: {
                        trigger: card,
                        start: "top 80%",
                    },
                },
            );
        });
    }

    animateAbout();
    document.addEventListener("astro:page-load", animateAbout);
</script>
