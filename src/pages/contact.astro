---
// src/pages/contact.astro (ENGLISH VERSION)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
---

<Layout 
    title="Contact - Prometheus Digital" 
    description="Get in touch with the Prometheus Digital team. Request a quote or ask your questions."
>
    <Header />

    <main>
        <section class="pt-40 pb-20 bg-gray-900/40">
            <div class="container mx-auto px-6 text-center">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Let's Get in <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Touch</span>
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300">
                    Ready to reach the top in the digital space? Email us, call us, or visit us for a coffee. We are looking forward to hearing your ideas!
                </p>
            </div>
        </section>

        <Contact />
    </main>

    <Footer />
</Layout>