---
// src/pages/kapcsolat.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
---

<Layout 
    title="Kapcsolat - Prometheus Digital" 
    description="Vegye fel a kapcsolatot a Prometheus Digital csapatával. Kérjen ajánlatot, vagy tegye fel kérdéseit."
>
    <Header />

    <main>
        <!-- Page Hero Section -->
        <section class="pt-40 pb-20 bg-gray-900/40">
            <div class="container mx-auto px-6 text-center">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Lépjünk <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Kapcsolatba</span>
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300">
                    Készen állsz, hogy a digitális térben is a csúcsra törj? Írj nekünk, hívj minket, vagy látogass meg minket egy kávéra. Várjuk, hogy megismerhessük az ötleteidet!
                </p>
            </div>
        </section>

        <!-- Reuse Contact Section (Form + Details) -->
        <Contact />
    </main>

    <Footer />
</Layout>
