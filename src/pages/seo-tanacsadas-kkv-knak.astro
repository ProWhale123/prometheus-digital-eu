---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import { Image } from 'astro:assets';

import project1Image from '../../public/images/project-1.jpg';
import project2Image from '../../public/images/project-2.jpg';
import project3Image from '../../public/images/project-3.jpg';

const seoProjects = [
    { name: "Elegáns Fine Dining Weboldal", description: "Helyi SEO stratégiával értük el, hogy a 'budapesti étterem' keresésekre a Google Top 3 találatában szerepeljenek.", imageSrc: project1Image, result: "+40% organikus forgalom" },
    { name: "Modern Építőipari és Felújítási Weboldal", description: "A technikai SEO és a célzott tartalmak segítségével a releváns kulcsszavakra (pl. 'lakásfelújítás budapest') az első oldalra került az oldal.", imageSrc: project3Image, result: "Top 3 helyezés keresésekre" },
    { name: "Modern Éttermi Weboldal Galériával", description: "A célzott blogposztok és a szakértői tartalomépítés megduplázta a kapcsolatfelvételi űrlapon érkező, minőségi ügyfél-megkereséseket.", imageSrc: project2Image, result: "2x több minőségi megkeresés" },
];

import SmeIcon from '../components/icons/SmeIcon.astro';
import CodeIcon from '../components/icons/CodeIcon.astro';
import ResultsIcon from '../components/icons/ResultsIcon.astro';
import ReportIcon from '../components/icons/ReportIcon.astro';

const whyUsFeatures = [
    { icon: SmeIcon, title: "KKV-Fókuszú Megközelítés", description: "Pontosan értjük a kis- és középvállalkozások erőforrásait és kihívásait. Nincsenek irreális ígéretek, csak a te cégedre szabott, hatékony stratégia." },
    { icon: CodeIcon, title: "Technikai SEO Szakértelem", description: "Mivel mi magunk is fejlesztünk, a SEO technikai alapjait mélyen ismerjük. Egy Astro-val épült, villámgyors weboldal már önmagában egy SEO szupererő." },
    { icon: ResultsIcon, title: "Adatvezérelt Döntések", description: "Nem a megérzésekre, hanem a kőkemény adatokra alapozunk. Kulcsszókutatással, versenytárs-elemzéssel és analitikával találjuk meg a legjobb lehetőségeket." },
    { icon: ReportIcon, title: "Átlátható Riporting", description: "Nálunk nincsenek titkok. Rendszeres, közérthető riportokban mutatjuk be az elért eredményeket, hogy pontosan lásd, hova kerül a befektetésed." },
];

const seoProcess = [
    { title: "Audit és Célkitűzés", description: "Egy teljeskörű elemzéssel kezdünk, ahol felmérjük a jelenlegi helyzetet és meghatározzuk a reális, mérhető célokat." },
    { title: "Kulcsszókutatás és Stratégia", description: "Megtaláljuk azokat a kulcsszavakat, amikre a te vevőid keresnek, és felépítünk egy stratégiát ezek megcélzására." },
    { title: "Technikai & On-Page Optimalizálás", description: "Rendbe tesszük a weboldalad technikai alapjait, a sebességtől a meta adatokig, hogy a Google imádja." },
    { title: "Tartalom- és Linképítés", description: "Segítünk olyan értékes tartalmakat létrehozni, amik vonzzák a látogatókat és a linkeket, ezzel növelve az oldalad tekintélyét." },
    { title: "Mérés és Finomhangolás", description: "Folyamatosan mérjük az eredményeket, és az adatok alapján finomhangoljuk a stratégiát a maximális teljesítmény érdekében." }
];
---

<Layout 
    title="SEO Tanácsadás KKV-knak | Több Vevő a Google-ből - Prometheus Digital" 
    description="Növelje organikus forgalmát és szerezzen több ügyfelet a Google-ből! Professzionális, adatvezérelt SEO tanácsadás kifejezetten magyar KKV-k számára."
>
    <Header />

    <main>
        <section class="relative pt-40 pb-20 flex items-center justify-center text-center overflow-hidden">
            <div class="absolute inset-0 bg-gray-950"></div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 text-center relative z-10">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Hagyja Abba a Találgatást. <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Szerezzen Vevőket a Google-ből.</span>
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300 mb-8">
                    A legjobb termék is láthatatlan marad, ha a vevői nem találják meg. Segítünk, hogy az Ön cége legyen az első, akit a Google ajánl, amikor egy potenciális ügyfél keres.
                </p>
                <a href="/kapcsolat?tema=seo-helyzetfelmeres" class="inline-block bg-sky-500 text-white font-bold py-4 px-10 rounded-full text-lg transition-all duration-300 transform hover:scale-105 hover:bg-sky-600 hover:shadow-2xl">
                    Kérek egy ingyenes SEO Helyzetfelmérést!
                </a>
            </div>
        </section>
        
        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Nem Varázslat, Hanem Stratégia</h2>
                    <p class="text-lg text-gray-400">A SEO nem titkos trükkök gyűjteménye. Egy adatvezérelt, hosszú távú folyamat, amit kifejezetten a magyar kis- és középvállalkozások igényeire szabtunk.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-10 max-w-5xl mx-auto">
                    {whyUsFeatures.map(feature => {
                        const Icon = feature.icon;
                        return(
                            <div class="flex items-start space-x-6">
                                <div class="flex-shrink-0 flex items-center justify-center h-16 w-16 rounded-full bg-sky-500/10 text-sky-400"><Icon /></div>
                                <div>
                                    <h3 class="text-2xl font-bold text-white mb-3">{feature.title}</h3>
                                    <p class="text-gray-400">{feature.description}</p>
                                </div>
                            </div>
                        )
                    })}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32 border-t border-b border-white/10 bg-gray-900/40">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">A Közös Munka Lépései</h2>
                    <p class="text-lg text-gray-300">Egy jól felépített, átlátható folyamat a sikeres SEO projekt kulcsa.</p>
                </div>
                <div class="max-w-4xl mx-auto space-y-8">
                    {seoProcess.map((step, index) => (
                        <div class="flex items-center space-x-6 bg-gray-900/50 border border-white/10 rounded-2xl p-6">
                            <div class="text-sky-400 font-black text-4xl">0{index+1}</div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">{step.title}</h3>
                                <p class="text-gray-400">{step.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-32">
            <div class="container mx-auto px-6">
                 <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Eredmények, Amik Magukért Beszélnek</h2>
                    <p class="text-lg text-gray-400">A SEO stratégia hatása a számokban mérhető.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    {seoProjects.map(project => (
                        <div class="border border-white/10 rounded-2xl overflow-hidden group transform transition-all duration-300 hover:shadow-2xl hover:shadow-sky-500/20 hover:-translate-y-2">
                            <Image src={project.imageSrc} alt={project.name} class="w-full h-48 object-cover" />
                            <div class="p-6 bg-gray-900/50">
                                <h3 class="text-xl font-bold text-white">{project.name}</h3>
                                <div class="mt-4 text-sky-400 font-bold text-lg">{project.result}</div>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <Contact />
    </main>
    <Footer />
</Layout>