---
// src/pages/services.astro (ENGLISH VERSION)
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import { Image } from 'astro:assets';
import servicesImage from '../../public/images/services-background.jpg';

// Icon imports
import WebsiteIcon from '../components/icons/WebsiteIcon.astro';
import CartIcon from '../components/icons/CartIcon.astro';
import DesignIcon from '../components/icons/DesignIcon.astro';
import SeoIcon from '../components/icons/SeoIcon.astro';

// React Interactions
import SpotlightCard from '../components/react/SpotlightCard.jsx';
import TextScramble from '../components/react/TextScramble.jsx';

const services = [
    {
        icon: WebsiteIcon,
        title: "Conversion-Optimized Websites",
        description: "We don't just generate traffic; we generate customers. Our lightning-fast, Astro-based websites focus on user experience and measurable results.",
        whoFor: [
            "Startups looking for a strong online foundation.",
            "Established companies with outdated sites looking to level up.",
            "Personal brands and experts wanting to showcase themselves."
        ],
        includes: [
            "Strategic consultation and planning",
            "Custom, responsive UI/UX design",
            "Lightning-fast Astro development",
            "Search Engine Optimization (SEO) basics",
            "Content Management System (CMS) integration",
            "Training and project handover"
        ]
    },
    {
        icon: CartIcon,
        title: "Growth-Oriented Webshops",
        description: "We build online stores that increase revenue by maximizing the shopping experience. From simple product management to secure payments, we handle everything.",
        whoFor: [
            "Crafters and creators wanting to sell online.",
            "Retailers looking to expand into the digital space.",
            "Sellers of digital products (e.g., courses)."
        ],
        includes: [
            "Platform consultation (e.g., Shopify, custom solution)",
            "Product structure and database design",
            "Secure payment gateway integration (Stripe, etc.)",
            "Logistics and invoicing system connection",
            "User-friendly administration interface",
            "Conversion tracking and analytics setup"
        ]
    },
    {
        icon: DesignIcon,
        title: "Strategic UI/UX Design",
        description: "Design is not self-serving for us. We create intuitive and aesthetic interfaces that build trust and convert visitors into satisfied customers.",
        whoFor: [
            "Companies wanting to improve their existing site's UX.",
            "Startups needing a clean application design.",
            "Development teams needing professional designs."
        ],
        includes: [
            "User research and persona creation",
            "Wireframes and user journeys",
            "Interactive prototyping (Figma)",
            "Complete Design System creation",
            "Responsive designs for all screen sizes",
            "Assets prepared for developer handover"
        ]
    },
    {
        icon: SeoIcon,
        title: "Long-Term SEO Strategy",
        description: "We ensure potential customers find YOU, not just your competitors. Our technical and content solutions guarantee sustainable organic growth.",
        whoFor: [
            "New website owners wanting to start strong.",
            "Existing sites not performing well in search engines.",
            "Companies wanting to acquire customers through content marketing."
        ],
        includes: [
            "Comprehensive technical SEO audit",
            "Keyword research and competitor analysis",
            "On-page SEO (meta data, internal links, structure)",
            "Content strategy development",
            "Regular reporting and fine-tuning"
        ]
    }
];

const processSteps = [
    { title: "Discovery & Strategic Planning", description: "Our cooperation starts with an in-depth conversation where we understand your business goals, target audience, and market environment." },
    { title: "User Experience (UX) & Design (UI)", description: "Based on the strategy, we design wireframes and user journeys. This is followed by creating a modern visual design that fits your brand." },
    { title: "Development & Implementation", description: "We write clean, fast, and future-proof code from the approved designs using the Astro framework, guaranteeing excellent performance." },
    { title: "Content Upload & SEO", description: "We populate the finished framework with the provided content and perform critical basic search engine optimization settings." },
    { title: "Quality Assurance & Launch", description: "Before going live, we meticulously test everything for a flawless, smooth launch." },
    { title: "Handover, Training & Support", description: "After a successful launch, we hand over the keys, and with our optional maintenance packages, we continue to take care of your site if needed." },
]
---

<Layout 
    title="Services - Prometheus Digital" 
    description="Learn in detail how we help your business grow with modern website creation, webshop development, and SEO."
>
    <Header />

    <main>
        <section class="relative flex items-center justify-center text-center min-h-[50vh] overflow-hidden">
            <div class="absolute inset-0 z-0">
                <Image
                    src={servicesImage} 
                    alt="Prometheus Digital - Services Background" 
                    widths={[400, 800, 1200, 1920]}
                    sizes="(max-width: 800px) 100vw, 1920px"
                    quality="mid" 
                    class="w-full h-full object-cover"
                />
            </div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 relative z-10">
                <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                    Digital Tools <br class="md:hidden" />
                    <TextScramble 
                        client:load 
                        text="For Growth" 
                        className="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
                    />
                </h1>
                <p class="max-w-3xl mx-auto text-lg text-gray-300">We offer more than a simple website: we deliver strategic solutions that bring real business results.</p>
            </div>
        </section>

        <section class="py-12 md:py-32">
            <div class="container mx-auto px-6 space-y-24">
                {services.map((service, index) => {
                    const Icon = service.icon;
                    const isReversed = index % 2 !== 0; 
                    return (
                        <div class:list={["grid grid-cols-1 lg:grid-cols-2 gap-12 items-center", { "lg:grid-flow-col-dense": isReversed }]}>
                            
                            {/* Text Part */}
                            <div class:list={["text-center lg:text-left", { "lg:order-last": isReversed }]}>
                                <div class="inline-flex items-center justify-center h-20 w-20 rounded-full bg-sky-500/10 text-sky-400 mx-auto lg:mx-0 mb-6"><Icon /></div>
                                <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{service.title}</h2>
                                <p class="text-lg text-gray-300">{service.description}</p>
                            </div>
                            
                            {/* Card Part */}
                            <SpotlightCard client:visible className="h-full">
                                <div class="p-8 h-full"> 
                                    <h4 class="font-semibold text-sky-400 mb-3 uppercase tracking-wider text-sm">Who is it for?</h4>
                                    <ul class="text-gray-300 space-y-2 mb-8">{service.whoFor.map(item => <li class="flex items-start"><span class="mr-2 mt-1.5 text-sky-500">&rarr;</span>{item}</li>)}</ul>
                                    <h4 class="font-semibold text-sky-400 mb-3 uppercase tracking-wider text-sm">What's included?</h4>
                                    <ul class="text-gray-300 space-y-2">{service.includes.map(item => <li class="flex items-center"><svg class="w-4 h-4 mr-3 text-green-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>{item}</li>)}</ul>
                                </div>
                            </SpotlightCard>

                        </div>
                    )
                })}
            </div>
        </section>

        <section class="py-12 md:py-32 border-t border-white/10 bg-gray-900/40 animate-on-scroll">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                        <TextScramble client:visible text="Steps of Our Cooperation" />
                    </h2>
                    <p class="text-lg text-gray-300">A well-structured, transparent process is the key to a successful project. With us, you will know exactly what is happening and why.</p>
                </div>
                <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-10">
                    {processSteps.map((step, index) => (
                        <div class="flex items-start space-x-6">
                            <div class="text-sky-400 font-black text-4xl">0{index+1}</div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">{step.title}</h3>
                                <p class="text-gray-300">{step.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <Contact />
    </main>

    <Footer />
</Layout>