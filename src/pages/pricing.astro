---
// src/pages/araink.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import { Image } from 'astro:assets';
import SeoIcon from '../components/icons/SeoIcon.astro';
import DesignIcon from '../components/icons/DesignIcon.astro';
import ShieldIcon from '../components/icons/ShieldIcon.astro';

// React komponensek
import PriceCalculator from '../components/react/PriceCalculator.jsx';
import TiltCard from '../components/react/TiltCard.jsx';
import TextScramble from '../components/react/TextScramble.jsx';

// JAVÍTVA: Visszaállítottuk az importot a src/assets mappából az optimalizáláshoz
import pricingImage from '../assets/images/araink-background.jpg';

const pricingPlans = [
  {
    name: 'Induló Csomag',
    oneTimePrice: '290 000 Ft',
    monthlyPrice: '61 500 Ft / hó',
    description: 'Tökéletes választás induló vállalkozásoknak, akiknek egy modern és gyors bemutatkozó oldalra van szükségük.',
    features: [ 'Egyedi, reszponzív dizájn', '1-5 oldal', 'SEO alapbeállítások', 'Villámgyors betöltés (Astro)', 'Hosting és domain management', 'Céges email beállítás', 'Kapcsolati űrlap' ],
    monthlyFeatures: [ 'Havi biztonsági mentés', 'Technikai karbantartás' ],
    isPopular: false,
    cta: { text: 'Érdekel az ajánlat', href: '/kapcsolat?csomag=indulo' }
  },
  {
    name: 'Növekedés Csomag',
    oneTimePrice: '390 000 Ft',
    monthlyPrice: '81 500 Ft / hó',
    description: 'A legnépszerűbb opciónk cégeknek, akik aktívan szeretnének ügyfeleket szerezni egy dinamikus, tartalom-központú weboldallal.',
    features: [ 'Minden az Induló csomagból', 'Professzionális Blog motor', 'Többnyelvűség lehetősége', 'Hírlevél feliratkozási modul', 'Haladó SEO beállítások' ],
    monthlyFeatures: [ 'Heti biztonsági mentés', 'Prémium technikai karbantartás' ],
    isPopular: true,
    cta: { text: 'Kiválasztom', href: '/kapcsolat?csomag=novekedes' }
  },
  {
    name: 'Prémium Csomag',
    oneTimePrice: '690 000 Ft-tól',
    monthlyPrice: '141 500 Ft / hó',
    description: 'Komplexebb igényekre, webshopokhoz vagy cégeknek, akik a maximumot akarják kihozni online jelenlétükből.',
    features: [ 'Minden a Növekedés csomagból', 'Webshop funkcionalitás (alap)', 'Fizetési kapu integráció (pl. Stripe)', 'CMS integráció (önálló tartalomszerkesztés)', 'Kiemelt támogatás' ],
    monthlyFeatures: [ 'Napi biztonsági mentés', 'Folyamatos technikai karbantartás' ],
    isPopular: false,
    cta: { text: 'Prémium Indítása', href: '/kapcsolat?csomag=premium' }
  }
];

const standaloneServices = [
    {
        icon: SeoIcon,
        title: "Havi SEO Csomag",
        price: "60 000 Ft / hó-tól",
        description: "Folyamatos keresőoptimalizálás, hogy weboldalad hosszú távon is a Google találati lista élén maradjon és folyamatosan új ügyfeleket hozzon.",
        features: [ "Technikai SEO audit és javítások", "Kulcsszókutatás és tartalomstratégia", "Havi riportálás és elemzés", "Linképítési tanácsadás" ],
        cta: { text: "Érdekel a SEO Csomag", href: "/kapcsolat?szolgaltatas=seo" }
    },
    {
        icon: DesignIcon,
        title: "Stratégiai UI/UX Tervezés",
        price: "Egyedi árajánlat alapján",
        description: "Legyen szó meglévő oldalad újratervezéséről vagy egy teljesen új applikáció-koncepcióról, segítünk egy felhasználóbarát és esztétikus felület megalkotásában.",
        features: [ "Felhasználói kutatás és drótvázazás", "Interaktív prototípus készítés (Figma)", "Komplett dizájnrendszer felépítése", "Fejlesztésre kész anyagok átadása" ],
        cta: { text: "Ajánlatot Kérek", href: "/kapcsolat?szolgaltatas=design" }
    },
    {
        icon: ShieldIcon,
        title: "Havi Karbantartási Csomag",
        price: "20 000 Ft / hó-tól",
        description: "Gondoskodunk róla, hogy weboldalad mindig biztonságos, gyors és naprakész maradjon, így te az üzletre fókuszálhatsz.",
        features: [ 'Havi biztonsági frissítések', 'Heti teljes biztonsági mentés', 'Folyamatos rendelkezésre állás figyelése', 'Havi 5 óra fejlesztői támogatás' ],
        cta: { text: "Karbantartást Kérek", href: "/kapcsolat?szolgaltatas=karbantartas" }
    }
];
---

<Layout 
    title="Áraink és Szolgáltatásaink - Prometheus Digital" 
    description="Ismerje meg weboldal készítési csomagjainkat és önálló szolgáltatásainkat. Átlátható árak, rugalmas megoldások az Ön üzleti igényeire szabva."
>
    <Header />

    <main>
        <section class="relative flex items-center justify-center text-center min-h-[50vh] overflow-hidden">
             <div class="absolute inset-0 z-0">
                {/* JAVÍTVA: Visszaállítva az <Image> komponensre */}
                <Image 
                    src={pricingImage}
                    alt="Prometheus Digital - Árak háttérkép"
                    widths={[400, 800, 1200, 1920]}
                    sizes="(max-width: 800px) 100vw, 1920px"
                    quality="mid"
                    class="w-full h-full object-cover"
                    loading="eager"
                />
             </div>
            <div class="absolute inset-0 bg-black/70"></div>
            <div class="container mx-auto px-6 relative z-10">
<h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
    Átlátható Árak, <br class="lg:hidden" />
    <TextScramble 
        client:load 
        text="Rugalmas Megoldások" 
        className="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
    />
</h1>                <p class="max-w-3xl mx-auto text-lg text-gray-300">Válasszon egyszeri díjas vagy kényelmes havi díjas konstrukcióink közül. Minden csomagunkat az Ön igényeire szabhatjuk.</p>
            </div>
        </section>

        <section class="py-20 md:py-32 pricing-section">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Weboldal & Webshop Készítési Csomagok</h2>
                    <p class="text-lg text-gray-300">Komplett megoldások új online jelenlét építéséhez, az alapoktól a prémium funkciókig.</p>
                </div>

                <div class="flex justify-center items-center mb-16">
                    <span class="font-semibold text-white mr-4 transition-colors duration-300" data-pricing-label="onetime">Egyszeri díj</span>
                    <label for="pricing-toggle" class="relative inline-block w-14 h-8 bg-gray-700 rounded-full cursor-pointer"><input type="checkbox" id="pricing-toggle" class="peer sr-only"><span class="absolute left-1 top-1 w-6 h-6 bg-white rounded-full transition-transform duration-300 peer-checked:translate-x-6"></span></label>
                    <span class="font-semibold text-gray-300 ml-4 transition-colors duration-300" data-pricing-label="monthly">Havi díjas konstrukció (6 hónap)</span>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto items-start">
                    {pricingPlans.map(plan => (
                        <TiltCard client:visible className="h-full">
                            <div class:list={["bg-gray-900/50 border rounded-2xl p-8 flex flex-col h-full transform transition-all duration-300", plan.isPopular ? "border-sky-500/80 shadow-2xl scale-105" : "border-white/10 hover:-translate-y-2"]}>
                                {plan.isPopular && <div class="absolute top-0 right-8 -mt-4"><span class="bg-gradient-to-r from-sky-400 to-cyan-300 text-zinc-900 text-xs font-bold px-4 py-1 rounded-full uppercase">Legnépszerűbb</span></div>}
                                <h3 class="text-2xl font-bold text-white mb-2">{plan.name}</h3>
                                <p class="text-gray-300 text-sm mb-6 flex-grow">{plan.description}</p>
                                
                                <div class="price-onetime">
                                    <div class="text-4xl font-bold text-white mb-2">{plan.oneTimePrice}</div>
                                    <div class="text-xs text-gray-500 mb-6">Egyszeri fejlesztési díj</div>
                                </div>
                                <div class="price-monthly hidden">
                                    <div class="text-4xl font-bold text-white mb-2">{plan.monthlyPrice}</div>
                                    <div class="text-xs text-gray-500 mb-6">6 hónapos futamidővel</div>
                                </div>
                                
                                <ul class="space-y-4 text-gray-300 mb-8 flex-grow">
                                    {plan.features.map(feature => ( <li class="flex items-start"><svg class="w-5 h-5 mr-3 mt-1 text-sky-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>{feature}</span></li> ))}
                                    <div class="price-monthly hidden">
                                        <li class="flex items-start font-bold text-sky-300"><svg class="w-5 h-5 mr-3 mt-1 text-sky-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>+ Havi karbantartás</span></li>
                                    </div>
                                </ul>

                                <a href={plan.cta.href} class:list={["w-full text-center font-bold py-3 px-6 rounded-lg transition-all duration-300", plan.isPopular ? "bg-gradient-to-r from-sky-400 to-cyan-300 text-zinc-900 hover:shadow-2xl hover:shadow-sky-500/50" : "bg-gray-700/50 text-white hover:bg-gray-600/80"]}>{plan.cta.text}</a>
                            </div>
                        </TiltCard>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-20 md:py-24 border-t border-white/10 bg-gray-900/40">
            <div class="container mx-auto px-6">
                <h2 class="text-3xl md:text-4xl font-bold text-center text-white mb-8 reveal">Tervezd meg a költségeket</h2>
                <PriceCalculator client:idle />
            </div>
        </section> 

        <section class="py-20 md:py-24 border-t border-white/10 bg-gray-900/40">
            <div class="container mx-auto px-6">
                <div class="text-center max-w-3xl mx-auto mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Önálló Szolgáltatások</h2>
                    <p class="text-lg text-gray-300">Nincs szüksége teljes weboldalra, csak egy specifikus területen szeretne fejlődni? Válasszon célzott megoldásaink közül.</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
                    {standaloneServices.map((service, index) => {
                        const Icon = service.icon;
                        const isLastAndOdd = standaloneServices.length % 2 !== 0 && index === standaloneServices.length - 1;
                        
                        return (
                            <TiltCard client:idle className={`h-full ${isLastAndOdd ? 'md:col-span-2 lg:col-span-1' : ''}`}>
                                <div class="bg-gray-900/50 border border-white/10 rounded-2xl p-8 flex flex-col h-full">
                                    <div class="flex items-center mb-4">
                                        <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-sky-500/10 text-sky-400 mr-4">
                                            <Icon />
                                        </div>
                                        <h3 class="text-2xl font-bold text-white">{service.title}</h3>
                                    </div>
                                    <p class="text-gray-400 text-sm mb-6 flex-grow">{service.description}</p>
                                    <div class="text-3xl font-bold text-white mb-6">{service.price}</div>
                                    <ul class="space-y-3 text-gray-300 mb-8 flex-grow">
                                        {service.features.map(feature => ( <li class="flex items-center"><svg class="w-4 h-4 mr-3 text-green-400" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path></svg>{feature}</li> ))}
                                    </ul>
                                    <a href={service.cta.href} class="block w-full text-center font-bold py-3 px-6 rounded-lg bg-gray-700/50 text-white hover:bg-gray-600/80 transition-colors">
                                        {service.cta.text}
                                    </a>
                                </div>
                            </TiltCard>
                        )
                    })}
                </div>
            </div>
        </section>

        <section class="py-20 text-center">
            <div class="container mx-auto px-6 max-w-3xl">
                <h2 class="text-3xl md:text-4xl font-bold text-white">Nem találja a tökéletes csomagot?</h2>
                <p class="text-gray-300 mt-4 max-w-2xl mx-auto">Előfordulhat, hogy Önnek csak egyetlen funkcióra van szüksége egy magasabb csomagból. Rugalmasak vagyunk! Kombinálja a funkciókat, vagy kérjen teljesen egyedi ajánlatot.</p>
                <a href="/kapcsolat?csomag=egyedi" class="inline-block mt-8 font-bold py-3 px-8 rounded-lg bg-gradient-to-r from-sky-400 to-cyan-300 text-zinc-900 hover:shadow-2xl hover:shadow-sky-500/50 transition-all duration-300 transform hover:-translate-y-1">Kérek egyedi ajánlatot</a>
            </div>
        </section>

        <Contact />
    </main>
    <Footer />
</Layout>

<style>
  /* Toggle stílusok */
  .pricing-section.show-monthly .price-monthly { display: block; }
  .pricing-section.show-monthly .price-onetime { display: none; }
  .price-monthly.hidden { display: none; }
</style>

<script>
  // 1. Függvénybe csomagoljuk a logikát
  function initPricingToggle() {
    const toggle = document.getElementById('pricing-toggle');
    const pricingSection = document.querySelector('.pricing-section');
    const onetimeLabel = document.querySelector('[data-pricing-label="onetime"]');
    const monthlyLabel = document.querySelector('[data-pricing-label="monthly"]');

    // Ha nem vagyunk az árak oldalon (nincsenek elemek), ne fusson tovább
    if (!toggle || !pricingSection || !onetimeLabel || !monthlyLabel) return;

    // Segédfüggvény a UI frissítéséhez
    const updateUI = () => {
      // @ts-ignore
      const isChecked = toggle.checked;
      
      // Osztályok cseréje a szülő konténeren
      pricingSection.classList.toggle('show-monthly', isChecked);

      // Címkék színezése
      if (isChecked) {
        monthlyLabel.classList.remove('text-gray-300');
        monthlyLabel.classList.add('text-white', 'font-semibold');
        onetimeLabel.classList.remove('text-white', 'font-semibold');
        onetimeLabel.classList.add('text-gray-300');
      } else {
        onetimeLabel.classList.remove('text-gray-300');
        onetimeLabel.classList.add('text-white', 'font-semibold');
        monthlyLabel.classList.remove('text-white', 'font-semibold');
        monthlyLabel.classList.add('text-gray-300');
      }
    };

    // Eseményfigyelő hozzáadása (klikkre/váltásra)
    toggle.addEventListener('change', updateUI);

    // Kezdeti állapot beállítása (hogy navigálás után is jó legyen az alapállapot)
    updateUI();
  }

  // 2. Futtatás minden oldalbetöltésnél és navigációnál
  document.addEventListener('astro:page-load', initPricingToggle);
</script>