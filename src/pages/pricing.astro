---
// src/pages/pricing.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Contact from "../components/Contact.astro";
import { Image } from "astro:assets";
import pricingImage from "../../public/images/araink-background.jpg"; // If image missing, use hero
import CookieBanner from "../components/CookieBanner.astro";

// The Calculator
import PriceCalculator from "../components/react/PriceCalculator.jsx";
import SpotlightHeroBackground from "../components/react/SpotlightHeroBackground.jsx";
---

<Layout
    title="Pricing - Prometheus Digital"
    description="Transparent, modular pricing. Plan your website costs with our interactive calculator."
>
    <Header />

    <main>
        <section
            class="relative h-[50vh] min-h-[400px] flex items-center justify-center text-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <div
                    class="parallax-bg w-full h-[120%] -translate-y-[10%] will-change-transform"
                >
                    <Image
                        src={pricingImage}
                        alt="Prometheus Digital Pricing"
                        class="w-full h-full object-cover opacity-50"
                        quality="high"
                    />
                </div>
            </div>
            <div
                class="absolute inset-0 bg-[#0B1120]/70 backdrop-blur-[2px] z-10"
            >
            </div>

            <div class="container mx-auto px-6 relative z-10 pt-10">
                <h1
                    class="font-black text-white uppercase tracking-tighter mb-4"
                >
                    <div class="overflow-hidden py-4">
                        <span
                            class="reveal-text block text-4xl md:text-6xl text-gray-300 translate-y-20 opacity-0 mb-2"
                        >
                            TRANSPARENT
                        </span>
                    </div>
                    <div class="overflow-hidden py-4">
                        <span
                            class="reveal-text block text-5xl md:text-8xl text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300 translate-y-20 opacity-0 pb-3"
                        >
                            INVESTMENT
                        </span>
                    </div>
                </h1>
                <p
                    class="reveal-desc max-w-2xl mx-auto text-lg md:text-xl text-gray-300 font-light translate-y-10 opacity-0"
                >
                    No hidden costs. Plan your project budget with exactly the
                    elements you need.
                </p>
            </div>
        </section>

        <section class="py-20 md:py-32 bg-[#0B1120] relative">
            <div
                class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] bg-[length:50px_50px] opacity-[0.03] pointer-events-none"
            >
            </div>

            <div class="container mx-auto px-4 md:px-6 relative z-10">
                <div class="max-w-6xl mx-auto">
                    <PriceCalculator client:visible />
                </div>
            </div>
        </section>

        <section class="py-20 border-t border-white/10 bg-gray-900/30">
            <div class="container mx-auto px-6 max-w-4xl text-center">
                <h2 class="text-3xl font-bold text-white mb-8">
                    What about maintenance?
                </h2>
                <div
                    class="bg-gray-900 border border-sky-500/30 p-8 rounded-2xl relative overflow-hidden"
                >
                    <div
                        class="absolute top-0 right-0 bg-sky-500 text-white text-xs font-bold px-3 py-1 rounded-bl-lg"
                    >
                        RECOMMENDED
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-2">
                        Annual "Peace of Mind" Package
                    </h3>
                    <div class="text-4xl font-black text-sky-400 mb-6">
                        â‚¬120 <span class="text-lg text-gray-500 font-normal"
                            >/ year</span>
                    </div>

                    <ul
                        class="text-gray-300 space-y-3 mb-8 text-left max-w-sm mx-auto"
                    >
                        <li class="flex items-center">
                            <svg
                                class="w-5 h-5 text-green-400 mr-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path></svg
                            >Premium Hosting & Domain
                        </li>
                        <li class="flex items-center">
                            <svg
                                class="w-5 h-5 text-green-400 mr-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path></svg
                            >SSL Certificate
                        </li>
                        <li class="flex items-center">
                            <svg
                                class="w-5 h-5 text-green-400 mr-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path></svg
                            >8-Year Operation Warranty
                        </li>
                        <li class="flex items-center">
                            <svg
                                class="w-5 h-5 text-green-400 mr-3"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path></svg
                            >1 Hour Monthly Modification
                        </li>
                    </ul>
                    <p class="text-sm text-gray-500 italic">
                        *Warranty valid only with active subscription. If you
                        use your own hosting, we cannot provide the warranty.
                    </p>
                </div>
            </div>
        </section>

        <Contact />
    </main>

    <Footer />
    <CookieBanner />
</Layout>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    gsap.registerPlugin(ScrollTrigger);

    function animatePricing() {
        const tl = gsap.timeline({ delay: 0.2 });
        tl.to(".reveal-text", {
            y: 0,
            opacity: 1,
            duration: 1.2,
            stagger: 0.15,
            ease: "power4.out",
        }).to(
            ".reveal-desc",
            {
                y: 0,
                opacity: 1,
                duration: 1,
                ease: "power3.out",
            },
            "-=0.8",
        );

        gsap.to(".parallax-bg", {
            yPercent: 20,
            ease: "none",
            scrollTrigger: {
                trigger: "header",
                start: "top top",
                end: "bottom top",
                scrub: true,
            },
        });
    }

    animatePricing();
    document.addEventListener("astro:page-load", animatePricing);
</script>
