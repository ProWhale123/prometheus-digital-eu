---
// src/components/Footer.astro
import { Image } from "astro:assets";
import logoImage from "../assets/images/logo.jpg";

const serviceLinks = [
    { name: "Web Development", href: "/services" },
    { name: "Webshop Development", href: "/services" },
    { name: "UI/UX Design", href: "/works" },
    { name: "SEO Optimization", href: "/services" },
];

const companyLinks = [
    { name: "About Us", href: "/about" },
    { name: "Our Work", href: "/works" },
    { name: "Blog", href: "/blog" },
    { name: "Contact", href: "/contact" },
];

const legalLinks = [
    { name: "Privacy Policy", href: "/privacy-policy" },
    // { name: "Impressum", href: "/impressum" }, // Enable if page exists
];

const currentYear = new Date().getFullYear();
---

<footer class="relative bg-[#050911] border-t border-white/5 overflow-hidden">
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-px bg-gradient-to-r from-transparent via-sky-500/50 to-transparent"
    >
    </div>

    <div class="container mx-auto px-6 pt-20 pb-12 relative z-10">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8 mb-20"
        >
            <div class="lg:col-span-4 space-y-6">
                <a href="/" class="block w-40">
                    <Image
                        src={logoImage}
                        alt="Prometheus Digital"
                        width={160}
                    />
                </a>
                <p class="text-gray-400 leading-relaxed max-w-sm">
                    Modern digital solutions that deliver business results.
                    Strategy, design, and technology all in one.
                </p>
                <div class="pt-4">
                    <a
                        href="mailto:info@prometheusdigital.hu"
                        class="text-xl font-bold text-white hover:text-sky-400 transition-colors"
                    >
                        info@prometheusdigital.hu
                    </a>
                </div>
            </div>

            <div class="lg:col-span-3">
                <h4
                    class="text-sm font-bold text-gray-500 uppercase tracking-widest mb-6"
                >
                    Services
                </h4>
                <ul class="space-y-4">
                    {
                        serviceLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-gray-400 hover:text-white transition-all duration-300 hover:pl-2 inline-block"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div class="lg:col-span-2">
                <h4
                    class="text-sm font-bold text-gray-500 uppercase tracking-widest mb-6"
                >
                    Company
                </h4>
                <ul class="space-y-4">
                    {
                        companyLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-gray-400 hover:text-white transition-all duration-300 hover:pl-2 inline-block"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div class="lg:col-span-3">
                <h4
                    class="text-sm font-bold text-gray-500 uppercase tracking-widest mb-6"
                >
                    Office
                </h4>
                <address class="not-italic text-gray-400 space-y-2">
                    <p>1125 Budapest,</p>
                    <p>Hable√°ny utca 6/A.</p>
                    <p class="mt-4 text-sm text-gray-600">
                        Appointment required
                    </p>
                </address>
            </div>
        </div>

        <div
            class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-gray-600"
        >
            <p>&copy; {currentYear} Prometheus Digital Kft.</p>
            <div class="flex gap-6">
                {
                    legalLinks.map((link) => (
                        <a
                            href={link.href}
                            class="hover:text-gray-400 transition-colors"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </div>
        </div>
    </div>

    <div
        class="absolute bottom-0 left-0 right-0 overflow-hidden pointer-events-none select-none flex justify-center opacity-[0.03]"
    >
        <span
            class="text-[12vw] leading-none font-black text-white uppercase tracking-tighter whitespace-nowrap translate-y-[20%]"
        >
            Prometheus
        </span>
    </div>
</footer>
