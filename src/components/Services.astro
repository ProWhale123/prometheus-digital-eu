---
// src/components/Services.astro (ENGLISH VERSION)
import WebsiteIcon from './icons/WebsiteIcon.astro';
import CartIcon from './icons/CartIcon.astro';
import DesignIcon from './icons/DesignIcon.astro';
import SeoIcon from './icons/SeoIcon.astro';
import SpotlightCard from './react/SpotlightCard.jsx';

const services = [
    {
        icon: WebsiteIcon,
        title: "Conversion-Optimized Websites",
        description: "We don't just generate traffic; we generate customers. Our lightning-fast, Astro-based websites focus on user experience and measurable results."
    },
    {
        icon: CartIcon,
        title: "Growth-Oriented Webshops",
        description: "We build online stores that increase revenue by maximizing the shopping experience. From simple product management to secure payments, we handle everything."
    },
    {
        icon: DesignIcon,
        title: "Strategic UI/UX Design",
        description: "Design is not self-serving for us. We create intuitive interfaces that build trust and convert visitors into satisfied customers."
    },
    {
        icon: SeoIcon,
        title: "Long-Term SEO Strategy",
        description: "We ensure potential customers find YOU, not just your competitors. Our technical and content solutions guarantee sustainable organic growth."
    }
]
---

<section id="services" class="py-12 md:py-32 bg-gray-900/40">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                How Can We <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Help You?</span>
            </h2>
            <p class="text-lg text-gray-300">
                We turn your digital goals into business results. We use the latest technologies to ensure you get not just a website, but an effective tool for customer acquisition.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
            {services.map(service => {
                const Icon = service.icon;
                return (
                    /* client:media - Mobilon nem töltjük be a JS-t a jobb teljesítményért */
                    <SpotlightCard client:media="(min-width: 768px)" className="h-full">
                        <div class="p-8 text-center h-full flex flex-col items-center">
                            <div class="flex items-center justify-center h-16 w-16 rounded-full bg-sky-500/10 text-sky-400 mb-6">
                               <Icon />
                            </div>
                            <h3 class="text-2xl font-bold text-white mb-3">{service.title}</h3>
                            <p class="text-gray-300">{service.description}</p>
                        </div>
                    </SpotlightCard>
                )
            })}
        </div>
        
        <div class="text-center mt-16">
            <a href="/services" class="inline-block bg-gray-700/50 text-white font-bold py-3 px-8 rounded-full text-base transition-colors duration-300 hover:bg-gray-600/80">
                More about our services
            </a>
        </div>
    </div>
</section>