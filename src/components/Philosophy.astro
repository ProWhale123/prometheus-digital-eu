---
// src/components/Philosophy.astro
import PartnershipIcon from "./icons/PartnershipIcon.astro";
import QualityIcon from "./icons/QualityIcon.astro";
import InnovationIcon from "./icons/InnovationIcon.astro";

const values = [
    {
        icon: PartnershipIcon,
        title: "Partnership",
        description:
            "We are not just suppliers, but strategic partners. Your success is our success too.",
    },
    {
        icon: QualityIcon,
        title: "Quality",
        description:
            "Every pixel and line of code has meaning. We are demanding of our work, without compromises.",
    },
    {
        icon: InnovationIcon,
        title: "Innovation",
        description:
            "We are constantly looking for the latest and most effective technologies so that your project too is future-proof.",
    },
];
---

<section class="py-20 md:py-32">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                Foundations of <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
                    >Success</span
                >
            </h2>
            <p class="text-lg text-gray-300">
                Three principles that guide every project of ours from concept
                to realization. These ensure that the result always exceeds
                expectations.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10 max-w-5xl mx-auto">
            {
                values.map((value) => {
                    const Icon = value.icon;
                    return (
                        <div
                            class="bg-gray-900/50 border border-white/10 rounded-2xl p-8 text-center transform transition-all duration-300 hover:border-sky-500/80 hover:shadow-2xl hover:-translate-y-2"
                            style="will-change: transform;"
                        >
                            <div class="flex items-center justify-center h-16 w-16 rounded-full bg-sky-500/10 text-sky-400 mx-auto mb-6">
                                <Icon />
                            </div>
                            <h3 class="text-2xl font-bold text-white mb-3">
                                {value.title}
                            </h3>
                            <p class="text-gray-300">{value.description}</p>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>
