---
// src/components/Contact.astro (ENGLISH VERSION)
import MailIcon from './icons/MailIcon.astro';
import PhoneIcon from './icons/PhoneIcon.astro';

// Interactive components
import MagneticButton from './react/MagneticButton.jsx';
import SpotlightCard from './react/SpotlightCard.jsx';

const contactDetails = [
    {
        icon: MailIcon,
        title: "General Inquiry",
        contact: "info@prometheusdigital.hu", // Az email maradhat .hu, de ha van .eu, írd át!
        href: "mailto:info@prometheusdigital.hu"
    },
    {
        icon: PhoneIcon,
        title: "Phone",
        contact: "+36 30 922 2042",
        href: "tel:+36309222042"
    }
]
---

<section id="contact" class="py-20 md:py-32 bg-gray-900/40 border-t border-white/10">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
                Get a Free <span class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300">Consultation</span>
            </h2>
            <p class="text-lg text-gray-300">
                Have an idea but don't know where to start? Fill out the form for a free, 30-minute consultation where we discuss your opportunities, no strings attached.
            </p>
        </div>

        <div class="max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
            
            {/* JAVÍTVA: action="/thank-you" az angol köszönőoldalhoz */}
            <form name="contact" method="POST" action="/thank-you" data-netlify="true" class="w-full">
                <input type="hidden" name="form-name" value="contact" />
                <div class="space-y-6">
                    <div class="relative group">
                        <input type="text" name="name" placeholder="Full Name" required class="w-full bg-gray-900/50 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300">
                    </div>
                    <div class="relative group">
                        <input type="email" name="email" placeholder="Email Address" required class="w-full bg-gray-900/50 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300">
                    </div>
                    <div class="relative group">
                        <input type="text" name="subject" placeholder="Subject (e.g., Free Consultation)" required class="w-full bg-gray-900/50 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300">
                    </div>
                    <div class="relative group">
                        <textarea name="message" placeholder="Briefly about your idea" rows="5" required class="w-full bg-gray-900/50 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300 resize-none"></textarea>
                    </div>
                </div>
                
                <div class="mt-8">
                    <MagneticButton 
                        client:idle 
                        className="w-full bg-gradient-to-r from-sky-500 to-cyan-400 text-white font-bold py-4 px-10 rounded-full text-lg shadow-lg hover:shadow-sky-500/40 transition-all"
                    >
                        Request Consultation
                    </MagneticButton>
                </div>
            </form>

            <SpotlightCard client:idle className="h-full">
                <div class="p-8 space-y-10">
                    <div>
                        <h3 class="text-2xl font-bold text-white mb-6">Contact Details</h3>
                        <p class="text-gray-400 mb-8">
                            Prefer to call or email directly? Feel free to reach out to us via the contact methods below.
                        </p>
                    </div>

                    <div class="space-y-8">
                        {contactDetails.map(detail => {
                            const Icon = detail.icon;
                            return (
                                <div class="flex items-start group">
                                    <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-sky-500/10 text-sky-400 mr-5 group-hover:bg-sky-500 group-hover:text-white transition-colors duration-300">
                                        <Icon />
                                    </div>
                                    <div>
                                        <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-1">{detail.title}</h4>
                                        <a href={detail.href} class="text-xl text-white hover:text-sky-400 transition-colors duration-300 font-medium">
                                            {detail.contact}
                                        </a>
                                    </div>
                                </div>
                            )
                        })}
                    </div>
                </div>
            </SpotlightCard>
        </div>
    </div>
</section>