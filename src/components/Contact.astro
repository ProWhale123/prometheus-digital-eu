---
// src/components/Contact.astro
import MailIcon from "./icons/MailIcon.astro";
import PhoneIcon from "./icons/PhoneIcon.astro";
import MagneticButton from "./react/MagneticButton.jsx";
import SpotlightCard from "./react/SpotlightCard.jsx";

const contactDetails = [
    {
        icon: MailIcon,
        title: "E-mail",
        contact: "info@prometheusdigital.hu",
        href: "mailto:info@prometheusdigital.hu",
    },
    {
        icon: PhoneIcon,
        title: "Phone",
        contact: "+36 30 922 2042",
        href: "tel:+36309222042",
    },
];
---

<section id="contact" class="py-24 md:py-32 relative">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-16">
            <h2
                class="text-3xl md:text-5xl font-black text-white mb-6 uppercase tracking-tight"
            >
                Get a Free <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-sky-400 to-cyan-300"
                    >Consultation</span
                >
            </h2>
            <p class="text-lg text-gray-400 font-light">
                Have an idea? Let's discuss how we can make it happen in a
                no-obligation call.
            </p>
        </div>

        <div
            class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-start"
        >
            <form
                name="contact"
                method="POST"
                action="/thank-you"
                data-netlify="true"
                class="w-full space-y-6"
            >
                <input type="hidden" name="form-name" value="contact" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="relative group">
                        <input
                            type="text"
                            name="name"
                            placeholder="Full Name"
                            required
                            class="w-full bg-gray-900 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300 hover:border-white/20"
                        />
                    </div>
                    <div class="relative group">
                        <input
                            type="email"
                            name="email"
                            placeholder="Email Address"
                            required
                            class="w-full bg-gray-900 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300 hover:border-white/20"
                        />
                    </div>
                </div>

                <div class="relative group">
                    <input
                        type="text"
                        name="subject"
                        placeholder="Subject (e.g. Website development)"
                        required
                        class="w-full bg-gray-900 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300 hover:border-white/20"
                    />
                </div>

                <div class="relative group">
                    <textarea
                        name="message"
                        placeholder="Briefly describe how we can help..."
                        rows="6"
                        required
                        class="w-full bg-gray-900 border border-white/10 rounded-xl px-6 py-4 text-white placeholder-gray-500 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500 transition-all duration-300 resize-none hover:border-white/20"
                    ></textarea>
                </div>

                <div class="flex items-start gap-3 mt-4">
                    <div class="flex items-center h-6">
                        <input
                            id="gdpr-consent"
                            name="gdpr-consent"
                            type="checkbox"
                            required
                            class="w-5 h-5 border border-gray-600 rounded bg-gray-800 focus:ring-3 focus:ring-sky-500 focus:ring-offset-gray-900 text-sky-500 cursor-pointer accent-sky-500"
                        />
                    </div>
                    <label
                        for="gdpr-consent"
                        class="text-sm text-gray-400 leading-tight select-none"
                    >
                        I have read and accept the <a
                            href="/privacy-policy"
                            class="text-sky-400 hover:text-sky-300 underline underline-offset-2 transition-colors"
                            >Privacy Policy</a
                        >, and consent to the processing of my data for contact
                        purposes.
                    </label>
                </div>

                <div class="mt-8">
                    <MagneticButton client:idle>
                        <button
                            type="submit"
                            class="w-full bg-white text-gray-900 font-bold py-4 px-10 rounded-full text-lg shadow-[0_0_20px_rgba(255,255,255,0.1)] hover:shadow-[0_0_30px_rgba(14,165,233,0.4)] hover:scale-[1.02] transition-all duration-300 flex justify-center items-center gap-2"
                        >
                            <span>Send Message</span>
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                                ><path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
                            >
                        </button>
                    </MagneticButton>
                </div>
            </form>

            <SpotlightCard
                client:visible
                className="h-full bg-gray-900/40 backdrop-blur-sm w-full"
            >
                <div
                    class="p-6 md:p-10 flex flex-col justify-between h-full space-y-8 md:space-y-12"
                >
                    <div>
                        <h3
                            class="text-xl md:text-2xl font-bold text-white mb-4 md:mb-6"
                        >
                            Contact Details
                        </h3>
                        <p
                            class="text-sm md:text-base text-gray-400 leading-relaxed"
                        >
                            Personal meetings in Budapest are available by
                            appointment. Feel free to call us or write an email.
                        </p>
                    </div>

                    <div class="space-y-6">
                        {
                            contactDetails.map((detail) => {
                                const Icon = detail.icon;
                                return (
                                    <div class="flex items-center group p-3 md:p-4 rounded-xl transition-colors hover:bg-white/5 border border-transparent hover:border-white/5">
                                        <div class="flex-shrink-0 flex items-center justify-center h-10 w-10 md:h-12 md:w-12 rounded-full bg-sky-500/10 text-sky-400 mr-4 group-hover:bg-sky-500 group-hover:text-white transition-all duration-300">
                                            <Icon />
                                        </div>
                                        <div class="overflow-hidden">
                                            {" "}
                                            <h4 class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-1">
                                                {detail.title}
                                            </h4>
                                            <a
                                                href={detail.href}
                                                class="text-base md:text-xl text-white hover:text-sky-400 transition-colors duration-300 font-medium font-mono break-all"
                                            >
                                                {detail.contact}
                                            </a>
                                        </div>
                                    </div>
                                );
                            })
                        }
                    </div>
                </div>
            </SpotlightCard>
        </div>
    </div>
</section>
